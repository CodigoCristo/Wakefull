# Maintainer: Cristo

pkgname=wakefull
pkgver=1.0
pkgrel=1
pkgdesc="Bloqueador de protector de pantalla y suspensiÃ³n del sistema"
arch=('x86_64')
url="https://github.com/CodigoCristo/Wakefull"
license=('GPL3')
depends=('libx11' 'systemd' 'xdg-utils' 'dbus')
makedepends=('meson' 'ninja' 'gcc')
provides=("${pkgname}")
conflicts=("${pkgname}")
source=("${pkgname}::git+$url.git")
sha256sums=('SKIP')

build() {
  cd "${srcdir}/${pkgname}"
  meson setup builddir --buildtype=release --prefix=/usr
  meson compile -C builddir
}

package() {
  cd "${srcdir}/${pkgname}"
  DESTDIR="${pkgdir}" meson install -C builddir
}

# Post-install hooks
post_install() {
  echo "==> Wakefull has been installed successfully"
  echo "==> Usage:"
  echo "    wakefull --start    # Start screen/power blocker"
  echo "    wakefull --stop     # Stop blocker"
  echo "    wakefull --status   # Check current status"
  echo "    wakefull --test     # Test available methods"
  echo "==> For full functionality, ensure systemd, xdg-utils and dbus are installed"
}

post_upgrade() {
  post_install
}
